cc = gcc
CFLAGS = -Wall -O -g
memsim:cache.o tools.o block.o 
	echo --------compiling cacheSimulator.cpp--------
	#g++ -ggdb -std=c++11 cacheSimulator.cpp -o memsim
	$(cc) $(CFLAGS) -c cache.o tools.o block.o -o memsim

cache.o:Cache.cpp Cache.h block.o
	$(cc) $(CFLAGS) -c Cache.cpp Cache.h block.o -o cache.o

tools.o:Tools.h Tools.cpp
	$(cc) $(CFLAGS) -c Tools.h Tools.cpp -o tools.o

block.o: Block.h 
	$(cc) $(CFLAGS) -c Block.h -o block.o


clean:
	echo --------remove executable program--------
	/bin/rm -rf *.o memsim